<% provide(:title, 'Create new post') %>
<h1>New post</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for @post do |f| %>
        <%= render 'shared/error_messages', subject: @post %>

        <%= f.label :title %>
        <%= f.text_field :title %>

        <%= f.label :text %>
        <%= f.text_area :text, rows: 7 %>

        <%= f.submit 'Create new post', class: 'btn btn-large btn-primary' %>
    <% end %>
  </div>
</div>