<% provide(:title, 'Edit post') %>
<div class="row">
  <h1>Edit your post</h1>
  <%= link_to "Click this to delete this post", posts_path(@post), method: "delete", data: { confirm: 'Are you sure you want to delete this post ?' } %>
</div>

<div class="row" style="margin-top: 16px;">
  <div class="span6 offset3">
    <%= form_for(@post) do |f| %>
        <%= render 'shared/error_messages', subject: @post %>

        <%= f.label :title %>
        <%= f.text_field :title %>

        <%= f.label :text %>
        <%= f.text_area :text, rows: 14 %>

        <%= f.submit 'Save changes', class: 'btn btn-large btn-primary' %>
    <% end %>
  </div>
</div>