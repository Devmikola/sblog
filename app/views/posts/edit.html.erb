<% provide(:title, 'Edit post') %>
<h1>Edit your post</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for @post do |f| %>
        <%= render 'shared/error_messages', subject: @post %>

        <%= f.label :title %>
        <%= f.text_field :title %>

        <%= f.label :text %>
        <%= f.text_area :text %>

        <%= f.submit 'Create new post', class: 'btn btn-large btn-primary' %>
    <% end %>
    <%= link_to "Delete this post", posts_path(@post), method: "delete", data: { confirm: 'Are you sure you want to delete this post ?' } %>
  </div>
</div>